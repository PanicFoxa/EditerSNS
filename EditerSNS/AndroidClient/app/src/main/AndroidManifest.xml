<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.bit_user.a5_29_restart">

    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <!-- 인터넷 접속 권한 -->
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".BasicbgSelect"
            android:label="list"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".ColorSel"
            android:theme="@style/AppTheme">
        </activity>

        <activity android:name=".bottom_navigation_activity.Read"></activity>
        <activity android:name=".bottom_navigation_activity.Write"></activity>
        <activity android:name=".bottom_navigation_activity.Notice"></activity>
        <activity android:name=".bottom_navigation_activity.Gps"></activity> <!-- 바텀 네비게이션 액티비티 추가 -->

    </application>

</manifest>